#include <stdio.h>
#define ROZMIAR 128
char*isElement(char*tab, char znak);

main()
{
char napis[ROZMIAR];
char *wyn;
int i;
printf("Podaj swoj napis:\n");
fgets(napis,ROZMIAR,stdin);
isElement(napis,'a');
wyn=isElement(napis, 'a');
if(wyn!=NULL)
    printf("Adres pierwszego znalezionego elementu %c", *wyn);
else
    printf("Nieznaleziono podanego znaku w napisie.");
return 0;
}

char*isElement(char*tab, char znak)
{
int i;
for(i=0;tab[i]!='\0';i++)
 {
  if(tab[i]==znak)
      return &tab[i];      
 }
return NULL;
}
